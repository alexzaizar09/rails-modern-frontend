<%= turbo_frame_tag(dom_id(concert)) do %>
  <%= simple_form_for(@concert) do |f| %>
    <article class="my-4">
      <div class="grid grid-cols-6 gap-4">
        <div class="col-span-2 text-xl">
          <%= f.input :start_time %>
        </div>
        <div class="col-span-3">
          <div class="name">
            <div class="text-lg font-bold">
              <%= f.input :name %>
            </div>
          </div>
          <div class="bands">
            <%= concert.bands.map(&:name).join(", ") %>
          </div>
          <div class="genres">
            <%= f.input :genre_tags %>
          </div>
          <div class="font-bold text-gray-500">
            <%= f.association :venue %>
          </div>
        </div>
        <div class="col-span-1 my-10 text-xl">
          <%= f.input :ilk, collection: Concert.ilks %>
          <%= f.input :access, collection: Concert.accesses %>
          <%= f.button :submit %>
        </div>
      </div>
    </article>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <% end %>
<% end %>
